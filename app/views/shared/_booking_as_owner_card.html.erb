<div class="card-trip">
  <div>
    <%= cl_image_tag booking.office.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="card-trip-infos d-flex justify-content-between" >
    <div class="card-text-left">
      <h1><%= booking.office.name %></h1>
      <h3><%= booking.office.city %></h3>

      <p><strong>From: </strong><%= booking.start_date %> - <strong> To: </strong><%= booking.end_date %></p>

    </div>
    <div>
      <h2 class="card-trip-pricing"><%= booking.office.capacity%>   <i class="fas fa-users"></i></h2>
      <h2 class="card-trip-pricing"><%= booking.office.price %> € / day </h2>
      <h3>Total price: <%= booking.total_price %>€</h3>
      <%= link_to accept_booking_path(booking),
            method: :patch,
            data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-check-circle validate"></i>
      <% end %>
      <%= link_to decline_booking_path(booking),
            method: :patch,
            data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-times-circle decline"></i>
     <% end %>
    </div>
  </div>
</div>
