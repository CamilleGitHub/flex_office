<h1>Offices#show</h1>
<p>Find me in app/views/offices/show.html.erb</p>

<div class="container">
  <h2><%= @office.name %></h2>
  <h3><%= @office.address %></h3>
  <p><%= @office.city %></p>
  <p><%= @office.price %></p>
  <p><%= @office.capacity %></p>
  <% if @office.photo.attached? %>
    <%= cl_image_tag @office.photo.key, height: 300, width: 400, crop: :fill %></p>
  <% end %>

  <%= link_to "Edit this Office", edit_office_path, class: 'btn btn-warning' %>

  <%= link_to "Delete #{@office.name}",
        offices_path(@office),
        method: :delete,
        class: 'btn btn-danger',
        data: { confirm: "Are you sure?" } %> | <%= link_to "Return to the list", offices_path, class: 'btn btn-primary' %>
</div>
